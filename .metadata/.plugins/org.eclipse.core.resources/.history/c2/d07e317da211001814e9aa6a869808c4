/*
 * Fonction de connexion BD 
 */
function connecterServeurBD()   {
    try {
    $bdd = new PDO('mysql:host=localhost;dbname=gsb-applifrais-visiteur;charset=utf8', 'root', '');
    }
    catch (Exception $e) {
        die('Erreur : ' . $e -> getMessage());
    }
    return $bdd;
}


?>